#!/bin/bash

# Script de sincronizaci√≥n de dotfiles con Git
# =============================================

DOTFILES_DIR="$HOME/dotfiles"

cd "$DOTFILES_DIR" || exit

echo "üîÑ Sincronizando dotfiles..."

# Verificar cambios
if [[ -n $(git status -s) ]]; then
    echo "üìù Cambios detectados:"
    git status -s
    
    # Agregar todos los cambios
    git add .
    
    # Commit con timestamp
    git commit -m "Update dotfiles - $(date '+%Y-%m-%d %H:%M:%S')"
    
    # Push a remoto
    if git remote | grep -q 'origin'; then
        echo "‚¨ÜÔ∏è  Subiendo cambios..."
        git push origin main
        echo "‚úÖ Dotfiles sincronizados"
    else
        echo "‚ö†Ô∏è  No hay remoto configurado"
        echo "Configura con: git remote add origin <url>"
    fi
else
    echo "‚úÖ No hay cambios para sincronizar"
fi
